<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update a Post:</h3>

    <form class="form update-post-form">
      <div class="form-group">
        <label for="update-post-title">Update Post Title:</label>
        <input class="update-form-input" type="text" id="update-post-title" name="update-post-title" />
      </div>
      <div class="update-form-group">
        <label for="update-post-text">Post:</label>
        <textarea class="update-form-input" id="update-post-text" name="update-post-text"></textarea>
      </div>
      <div class="update-form-group">
        <button type="submit" id= "update-post" class="btn btn-primary">Update</button>
      </div>
      <div class="delete-form-group">
        <button type="button" id= "delete-post" class="btn btn-danger">Delete</button>
      </div>
    </form>
  </div>

  <script src="/js/updatepost.js"></script>