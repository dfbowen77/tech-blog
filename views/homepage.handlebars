{{!-- The each handlebars helper is used to iterate over a list of all posts. --}}
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    {{!-- The format_date is a helper function --}}
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}
